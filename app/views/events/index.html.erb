<h1>Lista de eventos</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Nome da pessoa</th>
    <th>Nome do profissional</th>
    <th>Horario inicial</th>
    <th>Horario final</th>
    <th>Dia todo</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.name_person %></td>
    <td><%= event.name_professional %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.ends_at %></td>
    <td><%= event.all_day %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Vizualizar', event %></td>
    <td><%= link_to 'Editar', edit_event_path(event) %></td>
    <td><%= link_to 'Excluir', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
